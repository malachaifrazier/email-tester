<div class="container">
  <div class="row">
    <div class="col-md-12 col-md-12">
      <h1 class="lead">Listing Recipient Lists</h1>
      <p><%= link_to 'New Recipient list', new_recipient_list_path, class: "button" %></p>

      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>List Name</th>
              <th>List</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @recipient_lists.each do |recipient_list| %>
              <tr>
                <td><%= recipient_list.name %></td>
                <td><%= recipient_list.list %></td>
                <td><%= link_to 'Show', recipient_list %></td>
                <td><%= link_to 'Edit', edit_recipient_list_path(recipient_list) %></td>
                <td><%= link_to 'Destroy', recipient_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>

</div>


