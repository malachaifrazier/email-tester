<%= simple_form_for(@email) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :campaign %>
    <%= f.input :name %>
    <%= f.input :subject %>
    <%= f.simple_fields_for(:recipient_lists) do |lister| %>
      <%= lister.input :list, collection: @all_recipient_lists, include_blank: false %>
    <% end %>
    <%= f.simple_fields_for(:recipient_lists) do |lister| %>
      <%= lister.text_area :list, label: "Additional recipients (Separated by commas)" %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
