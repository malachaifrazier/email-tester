<div class="container">
  <div class="row">
    <div class="col-md-12 col-md-12">
      <h1 class="lead">Listing Emails</h1>
      <p><%= link_to 'New Email', new_email_path, class: "button" %></p>

      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Campaign</th>
              <th>Name</th>
              <th>Subject</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @emails.each do |email| %>
              <tr>
                <td><%= email.campaign_name %></td>
                <td><%= email.name %></td>
                <td><%= email.subject %></td>
                <td><%= link_to 'Show', email %></td>
                <td><%= link_to 'Edit', edit_email_path(email) %></td>
                <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%#= button_to 'New Campaign', new_campaign_path %>
    </div>
  </div>

</div>

